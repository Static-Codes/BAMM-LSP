{
  "scopeName": "source.bamc",
  "patterns": [
    {
      "comment": "Comments",
      "match": "//.*$",
      "name": "comment.line.double-slash.bamc"
    },
    {
      "comment": "Double Quoted Strings",
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.bamc"
    },
    {
      "comment": "Single Quoted Strings",
      "begin": "'",
      "end": "'",
      "name": "string.quoted.single.bamc"
    },
    {
      "comment": "BAMC Actions",
      "match": "\\b(add-header|add-headers|browser|click-exp|click|click-at-position|close-current-tab|end-javascript|fill-text-exp|fill-text|get-text|open-new-tab|save-as-html|save-as-html-exp|select-option|select-element|set-custom-useragent|start-javascript|take-screenshot|visit|wait-for-seconds|feature)\\b",
      "name": "keyword.control.bamc"
    },
    {
      "comment": "Feature Flags",
      "match": "\"(disable-pycache|disable-ssl|use-http-proxy|use-https-proxy|use-socks4-proxy|use-socks5-proxy)\"",
      "name": "constant.language.bamc"
    },
    {
      "comment": "Numeric constants",
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.bamc"
    }
  ]
}